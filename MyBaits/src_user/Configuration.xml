<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="User" type="com.huangqg.mybatis.model.User"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
        <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
            <property name="driver" value="com.mysql.jdbc.Driver"/>
            <property name="url" value="jdbc:mysql://192.168.1.123:3306/mybatis" />
            <property name="username" value="root"/>
            <property name="password" value="engine"/>
            </dataSource>
        </environment>
    </environments>
   
    <mappers>
        <mapper resource="com/huangqg/mybatis/model/User.xml"/>
    </mappers>
</configuration>